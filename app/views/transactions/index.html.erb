<div class="header">
  <a class="back-button" href="<%= categories_path(@category) %>">
      <img class="back-icon" src="<%= asset_path('back.png') %>" alt="back-icon">
  </a>

  <h2>Transactions</h2>

</div>
  <div class="category-container">
        <div class="category-image-container">
           <img class = "category-image" src= "<%= @category.icon %>" alt="<%= @category.name %>_image">
        </div>
        <p class="category-name"><%= @category.name %></p>
      </div>
      <p class="category-amount">$<%= @category.total_amount %></p>
      </div>

<div class="transactions">

    <% @transactions.each do |transaction| %>

      <div class="transaction-item">
        <p class="transaction-name"><%= transaction.name %></p>
        <p class="transaction-amount">$<%= transaction.amount %></p>
      </div>
      
    <% end %>
    </div>

  <a class="add-transaction-a" href="<%= new_category_transaction_path(@category) %>">
    <button class="add-transaction-btn">Add a New Transaction</button>
  </a>
</div>