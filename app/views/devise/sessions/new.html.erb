<h2 class="title-log-in">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, class: "label-input" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "email-input" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "label-input" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "pass-input" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field-check">
      <%= f.check_box :remember_me, class: "check-input" %>
      <%= f.label :remember_me, class: "label-check" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "btn-log-in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

